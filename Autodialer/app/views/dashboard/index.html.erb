<div class="row">
  <!-- Page Header -->
  <div class="col-12 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h1 class="h3 mb-0">
          <i class="bi bi-speedometer2 text-primary"></i>
          Dashboard
        </h1>
        <p class="text-muted mb-0">Monitor your autodialer activity and performance</p>
      </div>
      <div>
        <small class="text-muted">
          Last updated: <%= Time.current.strftime("%H:%M:%S") %>
        </small>
      </div>
    </div>
  </div>
</div>

<!-- AI Command Interface -->
<div class="row mb-4">
  <div class="col-12">
    <div class="ai-command-box">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h5 class="mb-3">
            <i class="bi bi-robot"></i>
            AI Assistant
          </h5>
          <div class="input-group">
            <input type="text" 
                   id="aiCommandInput" 
                   class="form-control" 
                   placeholder="Try: 'Start calling', 'Call 9876543210', 'Show today's logs'..."
                   onkeypress="handleAiCommand(event)">
            <button class="btn btn-light" onclick="submitAiCommand()">
              <i class="bi bi-send"></i>
            </button>
          </div>
        </div>
        <div class="col-md-4 text-end">
          <div class="voice-controls">
            <button class="record-btn" id="voiceBtn" onclick="toggleVoiceCommand()" title="Voice Command">
              <i class="bi bi-mic"></i>
            </button>
            <small class="text-light">Voice Commands</small>
          </div>
        </div>
      </div>
      
      <!-- AI Response Area -->
      <div id="aiResponse" style="display: none;" class="ai-response mt-3">
        <div id="aiResponseText"></div>
      </div>
    </div>
  </div>
</div>

<!-- Statistics Cards -->
